@model List<CeremonyGuest>
<div class="gap no-gap clearfix">
    <img class="botm-shp shp-img" src="assets/images/shp2-1.png" alt="shp2-1.png">
    <div class="featured-area-wrap text-center">
        <a class="contact-btn" href="index.html#" title=""><i class="flaticon-comment"></i>تماس با ما</a>
        <div class="featured-area2 owl-carousel">

            @foreach (var item in Model)
            {
            <div class="featured-item style2" style="background-image: url(@item.Image)">
                <div class="featured-cap">
                    @*<img src="assets/images/resources/bsml-txt.png" alt="bsml-txt.png">*@
                    @*<h1><img src="assets/images/resources/ayat-txt2-1.png" alt="ayat-txt2-1.png"></h1>*@
                    <h3>@item.Ceremony.Title</h3>
                    @*<span>زمان:@Html.Action("Home", "ConvertMiladitoShamsi",new {item.CeremonyDate})  </span>*@
                    @if (item.IsLive && (item.CeremonyDate.AddHours(4) > DateTime.Now) && (DateTime.Compare(item.CeremonyDate, DateTime.Now) < 0))
                    {
                        <a class="btn btn-danger brd-rd5" href="http://www.aparat.com" title="">پخش زنده</a>
                    }
                    else if (item.IsLive && (DateTime.Compare(item.CeremonyDate, DateTime.Now) > 0))
                    {
                        <a class="btn btn-dark brd-rd5" href="http://www.aparat.com" title="">پخش زنده</a>
                    }

                </div>
            </div>
            }

        </div>
    </div><!-- Featured Area Wrap -->
</div>
